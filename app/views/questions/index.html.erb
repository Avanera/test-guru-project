<h1>Listing Questions</h1>
<%= link_to 'New question', new_test_question_path %>
<table>
  <tr>
    <th>Text</th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= link_to 'Show', test_question_path(@test, question) %></td>
      <td><%= link_to 'Edit', edit_test_question_path(@test,question) %></td>
      <td><%= link_to 'Destroy', test_question_path(@test, question),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
