<h1><%= @question.test.title %> </h1>

<p>
  <%= @question.body %>
</p>

<h2>Answers</h2>

<%= link_to 'New answer', new_admin_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Edit question', edit_admin_question_path(@question) %> |
<%= link_to 'Delete question',
            admin_question_path(@question),
            method: :delete,
            data: { confirm: 'Are you sure?'} %> |
<%= link_to 'Back', cookies[:original_url] %> <!-- leads to admin/test/:id or admin/gists -->
