<%= form_with model: [:admin, @badge], local: true do |form| %>
<%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.select :rule, options_for_select(Badge::BADGES_AWARD.map{|key, value| [value, key]}), prompt: true %>
  </p>

  <p>
    <%= form.file_field :image %>
  </p>

  <p><%= form.submit %></p>
<% end %>
